<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Hudl Cross Browser Test Suite" thread-count="2">
    <test name="ChromiumTest">
        <parameter name="browserName" value="chromium"/>
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <classes>
            <class name="com.hudl.tests.LoginTest"/>
        </classes>
    </test>
    <test name="FirefoxTest">
        <parameter name="browserName" value="firefox"/>
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <classes>
            <class name="com.hudl.tests.LoginTest"/>
        </classes>
    </test>
    <test name="WebKitTest">
        <parameter name="browserName" value="webkit"/>
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <classes>
            <class name="com.hudl.tests.LoginTest"/>
        </classes>
    </test>
</suite>
